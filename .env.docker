# Docker runtime environment for backend container
ENV=dev
DEBUG=true

# Database (Docker internal network)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass
POSTGRES_DB=aiutox_erp_dev

# Redis (Docker internal network)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Security (dev defaults)
SECRET_KEY=change-this-dev-secret-before-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Initial owner bootstrap
INITIAL_OWNER_EMAIL=owner@aiutox.com
INITIAL_OWNER_PASSWORD=change-this-password
INITIAL_OWNER_FULL_NAME=System Owner

# URLs and CORS
FRONTEND_URL=http://frontend:5173
BACKEND_URL=http://backend:8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://frontend:5173,http://aiutox_frontend_dev:5173

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_TO_DB=true
LOG_FORMAT=human
